{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "webpack-watch",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"isBackground": true,
			"label": "npm: webpack-watch",
			"problemMatcher": [
				"$ts-webpack-watch"
			],
		},
		{
			"type": "npm",
			"script": "ts-compile",
			"problemMatcher": "$tsc",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}
